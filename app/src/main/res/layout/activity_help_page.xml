<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.sdge_app.helpPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need Help?"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            android:textSize="36dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:shadowColor="#000"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="0.1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Press Back then select from the menu for the desired page.\nInput for the Cool Zones Map must be either a proper address or a proper location title.\nExamples:\n4283 El Cajon Blvd. OR\nBalbao Park.\n\nIf application gets stuck on a invalid entry just restart app.\nNOTE: Device must be connected to the internet or the cool zones map will not load."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For More Help:"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:padding="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="Contact Name: Tsenddavaa Ganbat(Coding Instructor)"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:autoLink="email"
            android:textColorLink="@android:color/holo_blue_dark"
            android:text="tsenddavaa@sdfutures.org"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="Contact Name: Alemao Bravo(Program Manager)"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:autoLink="email"
            android:textColorLink="@android:color/holo_blue_dark"
            android:text="alemao@sdfutures.org"/>
        <pl.droidsonroids.gif.GifTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/polarbearcub"/>
    </LinearLayout>
</ScrollView>